{
  "name": "rescript-react-webpack-tailwind-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@svgr/webpack": "^5.5.0",
    "@webpack-cli/generators": "^2.0.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.2",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "cssnano": "^5.0.2",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.5.0",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "rescript": "^9.1.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.1.2",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dashboard": "^3.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "description": "ReScript React Webpack template with tailwindcss",
  "scripts": {
    "dashboard": "webpack-dashboard -- webpack serve --config build/webpack.js --env env=dev addon=dashboard",
    "eslint": "eslint --config .eslintrc --fix build/*.js build/**/*.js src/*.{js,jsx} src/**/*.{js,jsx}",
    "stylelint": "stylelint --config .stylelintrc.json --fix 'src/*.css' 'src/**/*.css' ",
    "build:prod": "TAILWIND_MODE=build NODE_ENV=production rescript clean && rescript build && webpack --config build/webpack.js --env env=prod",
    "build:dev": "TAILWIND_MODE=build NODE_ENV=development rescript clean && rescript build && webpack --config build/webpack.js --env env=dev",
    "start": "TAILWIND_MODE=watch NODE_ENV=development webpack serve --config build/webpack.js --env env=dev",
    "build:res": "rescript",
    "clean:res": "rescript clean",
    "watch:res": "rescript build -w",
    "watch:screen": "screen -c .screenrc"
  },
  "dependencies": {
    "@rescript/react": "^0.10.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
